<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!-- 配置生成器 -->
<generatorConfiguration>
	<context id="demo" defaultModelType="hierarchical"
		targetRuntime="MyBatis3Simple">


		<!-- 处理关键字，坦白讲这个我用不着，反正肯定不会用关键字的 -->
		<property name="autoDelimitKeywords" value="false" />

		<!-- 数据库里的起始符 -->
		<property name="beginningDelimiter" value="`" />
		<property name="endingDelimiter" value="`" />


		<plugin type="tk.mybatis.mapper.generator.MapperPlugin">
			<property name="mappers" value="tk.mybatis.mapper.common.Mapper" />
			<!-- caseSensitive默认false，当数据库表名区分大小写时，可以将该属性设置为true -->
			<property name="caseSensitive" value="true" />
		</plugin>

		<!-- 数据库地址 -->
		<!-- 参数看情况加，可以去掉 -->
		<jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
			connectionURL="jdbc:mysql://127.0.0.1:3306/db_demo?serverTimezone=UTC"
			userId="root" password="123456">
		</jdbcConnection>

		<!-- 强制BigDecimal -->
		<javaTypeResolver type="org.mybatis.generator.internal.types.JavaTypeResolverDefaultImpl">
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- model -->
		<javaModelGenerator targetPackage="com.jojo.ssm.model" targetProject="src/main/java">
		</javaModelGenerator>

		<!-- mapper.xml -->
		<sqlMapGenerator targetPackage="com.jojo.ssm.mapper" targetProject="src/main/resources">
		</sqlMapGenerator>

		<!-- mapper接口 -->
		<javaClientGenerator targetPackage="com.jojo.ssm.mapper" type="XMLMAPPER" targetProject="src/main/java">
		</javaClientGenerator>

		<!-- 
			使用%会为所有表生成代码，这个所有的意思是，连接内所有数据库的表，慎用。
			但又很奇怪，因为连接明明指定了数据库。
		 -->
		<table tableName="av_actress">
			<generatedKey column="id" sqlStatement="Mysql" identity="true" />
		</table>
	</context>
</generatorConfiguration>
